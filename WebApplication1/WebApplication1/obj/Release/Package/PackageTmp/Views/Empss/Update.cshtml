@model WebApplication1.Models.Emp
@{
    ViewBag.Title = "Update";
}
<script>
    $(function () {
        $("#up").click( function (e) {
            e.preventDefault();
          
            var dd = new departmentupdate();
           // var url = $(this).attr('action');
            $.ajax({
                dataType: 'json',
                contentType: "application/json",
                url: "/Empss/Update",
                data: JSON.stringify(dd),
                type: "POST",
                success: function (data) {
                    $("#up").hide();
                    $("#sd").hide();
                    $("#upd").show();
                    $("#upd").text(data);

                }
            });

        });
    }
    );
    function departmentupdate() {
        var s = this;
        s.DeptId = $("#DeptId").val();
        s.EmpId = $("#EmpId").val();
        s.Empname = $("#Empname").val();
        
        s.Empemail = $("#Empemail").val();
    }
</script>

@using (Html.BeginForm("Update", "Empss", null, FormMethod.Post))
{<h2>Update</h2>
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.EmpId)
    <div>@Html.LabelFor(model => model.Empname)</div>
    <div>@Html.EditorFor(model => model.Empname)</div>
    <div>@Html.LabelFor(model => model.Empemail)</div>
    <div>@Html.EditorFor(model => model.Empemail)</div>
    <div>@Html.LabelFor(model => model.DeptId, "Department")</div>
    <div>@Html.DropDownList("DeptId", String.Empty)</div>

    // <div> @Html.DropDownList("DeptId", null, htmlAttributes: new { @class = "form-control" })</div>
   
}
<div><input type="submit" value="Update" id="up" /></div>