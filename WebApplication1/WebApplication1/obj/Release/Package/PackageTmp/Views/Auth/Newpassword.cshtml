@model WebApplication1.ViewModel.Newur

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
<script src="~/Scripts/Newpassword.js"></script>


<div style="margin-top:50px;">
    @using (Html.BeginForm("Newpassword", "Auth", null, FormMethod.Post, new { id = "newpassword" }))
    {@Html.ValidationSummary(true)
        @Html.AntiForgeryToken()
        <h1>Enter New Password </h1>
         <div>@Html.LabelFor(p => p.Password)</div>
        <div>
            @Html.EditorFor(p => p.Password, new { htmlAttributes = new { @class = "form-control" }, })
            @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
        </div>

        <div>@Html.LabelFor(p => p.ConfirmPassword)</div>
        <div>
            @Html.EditorFor(p => p.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" }, })
            @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "text-danger" })
        </div>
        <div><input type="submit" value="Create" class="btn btn-primary" style="margin-top:10px;font-weight:bold" /></div>

    }
</div>
